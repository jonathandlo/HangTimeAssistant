<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_cont_collapsible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/line_cont_upper"
        style="@style/Divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Contact"
        android:textSize="18sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/img_ig"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:cropToPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:srcCompat="@drawable/ic_icons8_instagram" />

        <EditText
            android:id="@+id/text_ig"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:drawable/editbox_background_normal"
            android:ellipsize="start"
            android:includeFontPadding="true"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="instagram.com/test"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintBottom_toBottomOf="@+id/img_ig"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_ig"
            app:layout_constraintTop_toTopOf="@+id/img_ig" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:cropToPadding="true"
            android:paddingTop="1dp"
            android:paddingRight="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:srcCompat="@drawable/ic_icons8_facebook" />

        <EditText
            android:id="@+id/text_fb"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:drawable/editbox_background_normal"
            android:ellipsize="start"
            android:includeFontPadding="true"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="facebook.com/test"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:cropToPadding="true"
            android:paddingTop="1dp"
            android:paddingRight="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/sym_action_call" />

        <EditText
            android:id="@+id/text_phone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:drawable/editbox_background_normal"
            android:includeFontPadding="true"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="123 456 7890"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:cropToPadding="true"
            android:paddingLeft="4dp"
            android:paddingEnd="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:srcCompat="@drawable/ic_google_maps_icon" />

        <EditText
            android:id="@+id/text_address"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:drawable/editbox_background_normal"
            android:ellipsize="end"
            android:includeFontPadding="true"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="123 Address St. Town, CA"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Reminders"
        android:textSize="18sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="10dp">

        <CheckBox
            android:id="@+id/cb_cont_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reminder"
            android:textColor="@android:color/tertiary_text_dark"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/numpick_cont_reminder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/numpick_cont_reminder" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="every"
            app:layout_constraintBottom_toBottomOf="@+id/numpick_cont_reminder"
            app:layout_constraintEnd_toStartOf="@+id/numpick_cont_reminder"
            app:layout_constraintTop_toTopOf="@+id/numpick_cont_reminder" />

        <com.example.library.ui.NumberPickerWithXml
            android:id="@+id/numpick_cont_reminder"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@android:drawable/editbox_background_normal"
            android:fadingEdgeLength="20dp"
            android:selectionDividerHeight="0dp"
            app:defaultValue="1"
            app:layout_constraintEnd_toEndOf="@+id/numpick_cont_randomness"
            app:layout_constraintTop_toTopOf="parent"
            app:maxValue="1000"
            app:minValue="1" />

        <Spinner
            android:id="@+id/spinner_reminder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:entries="@array/time_period_array"
            android:spinnerMode="dropdown"
            app:layout_constraintBottom_toBottomOf="@+id/numpick_cont_reminder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/numpick_cont_reminder"
            app:layout_constraintTop_toTopOf="@+id/numpick_cont_reminder" />

        <CheckBox
            android:id="@+id/cb_cont_randomness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Randomness"
            android:textColor="@android:color/tertiary_text_dark"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/numpick_cont_randomness"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/numpick_cont_randomness" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+/-"
            app:layout_constraintBottom_toBottomOf="@+id/numpick_cont_randomness"
            app:layout_constraintEnd_toStartOf="@+id/numpick_cont_randomness"
            app:layout_constraintTop_toTopOf="@+id/numpick_cont_randomness" />

        <com.example.library.ui.NumberPickerWithXml
            android:id="@+id/numpick_cont_randomness"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@android:drawable/editbox_background_normal"
            android:selectionDividerHeight="0dp"
            app:defaultValue="0"
            app:layout_constraintEnd_toEndOf="@+id/numpick_cont_skip"
            app:layout_constraintTop_toBottomOf="@+id/numpick_cont_reminder"
            app:maxValue="1000"
            app:minValue="0" />

        <Spinner
            android:id="@+id/spinner_randomness"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:entries="@array/time_period_array"
            android:spinnerMode="dropdown"
            app:layout_constraintBottom_toBottomOf="@+id/numpick_cont_randomness"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/numpick_cont_randomness"
            app:layout_constraintTop_toTopOf="@+id/numpick_cont_randomness" />

        <CheckBox
            android:id="@+id/cb_cont_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip"
            android:textColor="@android:color/tertiary_text_dark"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/numpick_cont_skip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/numpick_cont_skip" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="the next"
            app:layout_constraintBottom_toBottomOf="@+id/numpick_cont_skip"
            app:layout_constraintEnd_toStartOf="@+id/numpick_cont_skip"
            app:layout_constraintTop_toBottomOf="@+id/numpick_cont_randomness" />

        <com.example.library.ui.NumberPickerWithXml
            android:id="@+id/numpick_cont_skip"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@android:drawable/editbox_background_normal"
            android:selectionDividerHeight="0dp"
            app:defaultValue="0"
            app:layout_constraintEnd_toStartOf="@+id/spinner_skip"
            app:layout_constraintTop_toBottomOf="@+id/numpick_cont_randomness"
            app:maxValue="50"
            app:minValue="0" />

        <Spinner
            android:id="@+id/spinner_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/skip_period_array"
            android:spinnerMode="dropdown"
            app:layout_constraintBottom_toBottomOf="@+id/numpick_cont_skip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/numpick_cont_skip" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Categories"
        android:textSize="18sp" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexbox_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        app:flexWrap="wrap">

        <TextView
            android:id="@+id/text_categories_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create a category in the 'Category' tab." />

    </com.google.android.flexbox.FlexboxLayout>

    <View
        android:id="@+id/view2"
        style="@style/Divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp" />
</LinearLayout>