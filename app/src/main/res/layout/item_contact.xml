<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constr_layout_contact"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="John Doe"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_ig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="instagram.com/test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_name" />

    <TextView
        android:id="@+id/text_fb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="facebook.com/test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text_ig"
        app:layout_constraintTop_toBottomOf="@+id/text_ig" />

    <TextView
        android:id="@+id/text_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123 456 7890"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/text_name" />

    <ImageView
        android:id="@+id/img_ig"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/text_fb"
        app:layout_constraintEnd_toStartOf="@+id/text_ig"
        app:layout_constraintTop_toTopOf="@+id/text_ig"
        app:srcCompat="@drawable/ic_icons8_instagram" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_fb"
        app:layout_constraintEnd_toStartOf="@+id/text_fb"
        app:layout_constraintStart_toStartOf="@+id/img_ig"
        app:layout_constraintTop_toBottomOf="@+id/text_ig"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_icons8_facebook" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_name"
        app:srcCompat="@android:drawable/sym_action_call" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_name"
        app:srcCompat="@drawable/ic_missing_avatar" />

</androidx.constraintlayout.widget.ConstraintLayout>