<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_cat_item_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <Button
        android:id="@+id/button_cat_color"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_cat_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/material_on_background_disabled"
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_cat_detail"
        app:layout_constraintStart_toEndOf="@+id/button_cat_color"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_cat_detail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minWidth="0dp"
        android:src="@android:drawable/ic_menu_sort_by_size"
        android:tint="@color/dayDeselectedTextColor"
        android:tintMode="src_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>